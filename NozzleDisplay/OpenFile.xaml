<Window x:Class="NozzleDisplay.OpenFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NozzleDisplay"
        mc:Ignorable="d"
        Title="OpenFIle" Height="300" Width="700">
    <Grid>
        <Label Content="Choose the file with the simulation you want to go on with:" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_choosefile" Content="Choose file" Height="25" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="75" Click="button_choosefile_Click"/>
        <TextBox x:Name="textbox_grande" HorizontalAlignment="Right" Height="25" Margin="0,100,100,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400"/>
        <TextBox x:Name="textbox_peque" HorizontalAlignment="Right" Height="25" Margin="0,150,100,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="button_openfile" Content="Open file" HorizontalAlignment="Left" Margin="450,0,0,50" VerticalAlignment="Bottom" Height="25" Width="75" Click="click_openfile"/>
    </Grid>
</Window>
